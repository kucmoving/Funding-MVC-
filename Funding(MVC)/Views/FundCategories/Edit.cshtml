@model FundCategoryVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Fund Category</h1>


<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultAmount" class="control-label"></label>
                <input asp-for="DefaultAmount" class="form-control" />
                <span asp-validation-for="DefaultAmount" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" /> <!--edit form should be with id-->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger" />
                 <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>